[alias]
	st = status -sb
	up = pull --rebase --prune
	sw = switch
	lg = log --graph --pretty=oneline --decorate --date=short --abbrev-commit --branches
[push]
	default = current
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
[ghq]
	root = ~/.ghq/src
[init]
	defaultBranch = main
[interactive]
